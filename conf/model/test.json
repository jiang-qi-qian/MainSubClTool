{
    "include_max_range": "hybrid",
    "main_cl": [
      {
        "model": "$APPNAME.$APPNAME",
        "type": "DOC",
        "shardingkey": {
          "type": "range",
          "key": {
            "RECEIVE_TIME": "$YYYY$MM$dd"
          }
        }
      }
    ],
    "sub_cl": [
      {
        "model": "$APPNAME.$APPNAME_$YYYY",
        "type": "DOC",
        "shardingkey": {
          "type": "hash",
          "key": {
            "CONTENT_ID": 1
          }
        }
      }
    ],
    "normal_cl": [
      {
        "model": "$APPNAME_LOB_$DATE.$APPNAME_LOB_$DATE",
        "type": "LOB",
        "shardingkey": {
          "type": "hash",
          "key": {
            "_id": 1
          }
        }
      }
    ]
  }
  